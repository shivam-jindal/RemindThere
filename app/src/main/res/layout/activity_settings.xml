<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/instr1"
            android:text="Date-Time Reminder"
            android:layout_margin="8dp"
            android:textColor="@color/colorAccent"/>

        <RelativeLayout
            android:id="@+id/date_notification_tone_rl"
            android:layout_width="match_parent"
            android:layout_below="@+id/instr1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date_notification_tone_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="@string/settings_notification_tone"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_notification_tone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_notification_tone_selector"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/date_notification_tone_rl"
            android:background="@color/divider" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/date_vibrate_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/divider2"
            android:padding="16dp"
            android:text="@string/settings_vibrate"
            android:textSize="16sp" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/date_vibrate_switch"
            android:background="@color/divider" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/instr2"
            android:text="Location Reminder"
            android:layout_margin="8dp"
            android:layout_below="@id/divider3"
            android:textColor="@color/colorAccent"/>

        <RelativeLayout
            android:id="@+id/location_notification_tone_rl"
            android:layout_width="match_parent"
            android:layout_below="@+id/instr2"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/location_notification_tone_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="@string/settings_notification_tone"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/location_notification_tone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_notification_tone_selector"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/location_notification_tone_rl"
            android:background="@color/divider" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/location_vibrate_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/divider4"
            android:padding="16dp"
            android:text="@string/settings_vibrate"
            android:textSize="16sp" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/location_vibrate_switch"
            android:background="@color/divider" />


    </RelativeLayout>
</ScrollView>